  display: flex;
  flex-direction: column;
}
.title {
  width: 100%;
  line-height: 30px;
  justify-content: space-between;
  border-bottom: 1px solid #f5f8f4;
  padding: 0 20rpx;
}
.title > view {
  color: #666;
}
.title > text {
  color: #fa9b4e;
}
.bottom-title {
  width: 100%;
  text-align: right;
  line-height: 40px;
  background-color: #fff;
  padding: 0 20rpx;
}
.card {
  width: 100%;
  height: 100px;
  display: flex;
  flex-direction: row;
}
.card-img {
  height: 100px;
  width: 100px;
  padding: 7px 7px;
}
.card-img > image {
  width: 86px;
  height: 86px;
}
.card-text {
  height: 100px;
  width: 100%;
  display: flex;
  flex-direction: column;
}
.card-text_ {
  width: 100%;
  height: 60px;
  display: flex;
  flex-direction: row;
}
.card-text_ > text {
  width: 80%;
  padding-left: 20rpx;
  color: #444;
  font-weight: 600;
  font-size: 10pt;
}
.card-text_ > view {
  padding-right: 20rpx;
  width: 20%;
  text-align: right;
}
.card-text_ > view > view {
  color: #444;
  font-weight: 600;
  margin-bottom: 10rpx;
}
.card-text_ > view > text {
  font-size: 9pt;
  color: #999;
}
